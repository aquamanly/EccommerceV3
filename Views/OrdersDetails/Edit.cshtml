@model EccommerceV3.Model.EF.OrdersDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>OrdersDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetailsId" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Product Id</label>
                <input readonly asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductQty" class="control-label">Product Quantity</label>
                <input asp-for="ProductQty" class="form-control" />
                <span asp-validation-for="ProductQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label">Product Price</label>
                <input readonly asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Order Id</label>
                <input readonly asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
